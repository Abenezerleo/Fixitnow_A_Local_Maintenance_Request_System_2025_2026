<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.fixitnow.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_admin"
            app:destination="@id/adminFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_user"
            app:destination="@id/userFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.fixitnow.ui.admin.AdminFragment"
        android:label="Admin Dashboard" />

    <fragment
        android:id="@+id/userFragment"
        android:name="com.fixitnow.ui.user.UserFragment"
        android:label="User Dashboard" />

</navigation> 